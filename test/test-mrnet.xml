<MRNet xmlns="http://www.krellinst.org/CBTF/MRNet.xsd">
    
  <Type>TestMRNet</Type>
  <Version>1.0.1</Version>

  <Input>
    <Name>in</Name>
    <To><Input>in1</Input></To>
  </Input>
  
  <Output>
    <Name>out</Name>
    <From><Output>out2</Output></From>
  </Output>

  <Stream>
    <Name>UpwardStream</Name>
    <Tag>4242</Tag>
  </Stream>
  
  <Frontend>
    
    <Network>
      
      <Type>FrontendNetwork</Type>
      <Version>1.0.0</Version>

      <SearchPath>${CMAKE_CURRENT_BINARY_DIR}</SearchPath>
      <Plugin>plugin-xml.so</Plugin>
      <Plugin>plugin-mrnet.so</Plugin>

      <Component>
        <Name>Incrementer-1</Name>
        <Type>Incrementer</Type>
      </Component>
      
      <Component>
        <Name>Incrementer-2</Name>
        <Type>Incrementer</Type>
      </Component>

      <Input>
        <Name>in1</Name>
        <To>
          <Name>Incrementer-1</Name>
          <Input>in</Input>
        </To>
      </Input>
      
      <Input>
        <Name>in2</Name>
        <To>
          <Name>Incrementer-2</Name>
          <Input>in</Input>
        </To>
      </Input>
      
      <Output>
        <Name>out1</Name>
        <From>
          <Name>Incrementer-1</Name>
          <Output>out</Output>
        </From>
      </Output>
      
      <Output>
        <Name>out2</Name>
        <From>
          <Name>Incrementer-2</Name>
          <Output>out</Output>
        </From>
      </Output>
      
    </Network>
    
    <IncomingUpstream>
      <Name>UpwardStream</Name>
      <To><Input>in2</Input></To>
    </IncomingUpstream>
    
    <OutgoingDownstream>
      <Name>DownwardStream</Name>
      <From><Output>out1</Output></From>
    </OutgoingDownstream>
    
  </Frontend>
  
  <Filter>
    
    <Depth><AllOther/></Depth>
    
    <Network>
      
      <Type>FilterNetwork</Type>
      <Version>1.0.0</Version>

      <SearchPath>${CMAKE_CURRENT_BINARY_DIR}</SearchPath>
      <Plugin>plugin-xml.so</Plugin>
      <Plugin>plugin-mrnet.so</Plugin>

      <Component>
        <Name>Incrementer-1</Name>
        <Type>Incrementer</Type>
      </Component>
      
      <Input>
        <Name>in</Name>
        <To>
          <Name>Incrementer-1</Name>
          <Input>in</Input>
        </To>
      </Input>

      <Output>
        <Name>out</Name>
        <From>
          <Name>Incrementer-1</Name>
          <Output>out</Output>
        </From>
      </Output>
      
    </Network>
    
    <IncomingUpstream>
      <Name>UpwardStream</Name>
      <To><Input>in</Input></To>
    </IncomingUpstream>
    
    <OutgoingUpstream>
      <Name>UpwardStream</Name>
      <From><Output>out</Output></From>
    </OutgoingUpstream>
    
  </Filter>
  
  <Backend>
    
    <Network>
      
      <Type>BackendNetwork</Type>
      <Version>1.0.0</Version>
      
      <SearchPath>${CMAKE_CURRENT_BINARY_DIR}</SearchPath>
      <Plugin>plugin-xml.so</Plugin>
      <Plugin>plugin-mrnet.so</Plugin>

      <Component>
        <Name>Doubler-1</Name>
        <Type>Doubler</Type>
      </Component>
      
      <Input>
        <Name>in</Name>
        <To>
          <Name>Doubler-1</Name>
          <Input>in</Input>
        </To>
      </Input>
      
      <Output>
        <Name>out</Name>
        <From>
          <Name>Doubler-1</Name>
          <Output>out</Output>
        </From>
      </Output>
      
    </Network>
    
    <IncomingDownstream>
      <Name>DownwardStream</Name>
      <To><Input>in</Input></To>
    </IncomingDownstream>
    
    <OutgoingUpstream>
      <Name>UpwardStream</Name>
      <From><Output>out</Output></From>
    </OutgoingUpstream>
    
  </Backend>
  
</MRNet>

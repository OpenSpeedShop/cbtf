<!--
The MRNet topology file used with this test creates the following processes,
and overlayed component network:

      FE:0 FI:0       FI:1       FI:2       FI:3       FI:4       FI:5 BE:5
     +====+====+     +====+     +====+     +====+     +====+     +====+====+
  in |  I |    | ==> |    | ==> |    | ==> |    | ==> |    | ==> |    |    |
     |    |    |     |    |     |    |     |    |     |    |     |    | D  |
 out |  I |    | <== | I  | <== | I  | <== |    | <== |  I | <== |    |    |
     +====+====+     +====+     +====+     +====+     +====+     +====+====+

where FE is the frontend, FI is a filter, BE is a backend, I is an incrementer
component, and D is a doubler component. The inputs and outputs of the network
are integers, and if we call the input "x" and the output "f(x)", the function
being computed is:

    f(x) = ((x + 1) * 2) + 1 + 1 + 1 + 1 
         = (2x + 2) + 4 
         = 2x + 6

-->

<MRNet xmlns="http://www.krellinst.org/CBTF/MRNet.xsd">
    
  <Type>TestMRNet</Type>
  <Version>1.0.1</Version>

  <Input>
    <Name>in</Name>
    <To><Input>in1</Input></To>
  </Input>
  
  <Output>
    <Name>out</Name>
    <From><Output>out2</Output></From>
  </Output>

  <Stream>
    <Name>UpwardStream</Name>
    <Tag>4242</Tag>
  </Stream>
  
  <Frontend>
    
    <Network>
      
      <Type>FrontendNetwork</Type>
      <Version>1.0.0</Version>

      <SearchPath>${CMAKE_CURRENT_BINARY_DIR}</SearchPath>
      <Plugin>plugin-xml.so</Plugin>
      <Plugin>plugin-mrnet.so</Plugin>

      <Component>
        <Name>Incrementer-1</Name>
        <Type>Incrementer</Type>
      </Component>
      
      <Component>
        <Name>Incrementer-2</Name>
        <Type>Incrementer</Type>
      </Component>

      <Input>
        <Name>in1</Name>
        <To>
          <Name>Incrementer-1</Name>
          <Input>in</Input>
        </To>
      </Input>
      
      <Input>
        <Name>in2</Name>
        <To>
          <Name>Incrementer-2</Name>
          <Input>in</Input>
        </To>
      </Input>
      
      <Output>
        <Name>out1</Name>
        <From>
          <Name>Incrementer-1</Name>
          <Output>out</Output>
        </From>
      </Output>
      
      <Output>
        <Name>out2</Name>
        <From>
          <Name>Incrementer-2</Name>
          <Output>out</Output>
        </From>
      </Output>
      
    </Network>
    
    <IncomingUpstream>
      <Name>UpwardStream</Name>
      <To><Input>in2</Input></To>
    </IncomingUpstream>
    
    <OutgoingDownstream>
      <Name>DownwardStream</Name>
      <From><Output>out1</Output></From>
    </OutgoingDownstream>
    
  </Frontend>
  
  <Filter>

    <Depth>
      <RootRelative offset="4">
        <Offset>1</Offset>
        <Offset>2</Offset>
      </RootRelative>
    </Depth>
    
    <Network>
      
      <Type>FilterNetwork</Type>
      <Version>1.0.0</Version>

      <SearchPath>${CMAKE_CURRENT_BINARY_DIR}</SearchPath>
      <Plugin>plugin-xml.so</Plugin>
      <Plugin>plugin-mrnet.so</Plugin>

      <Component>
        <Name>Incrementer-1</Name>
        <Type>Incrementer</Type>
      </Component>
      
      <Input>
        <Name>in</Name>
        <To>
          <Name>Incrementer-1</Name>
          <Input>in</Input>
        </To>
      </Input>

      <Output>
        <Name>out</Name>
        <From>
          <Name>Incrementer-1</Name>
          <Output>out</Output>
        </From>
      </Output>
      
    </Network>
    
    <IncomingUpstream>
      <Name>UpwardStream</Name>
      <To><Input>in</Input></To>
    </IncomingUpstream>
    
    <OutgoingUpstream>
      <Name>UpwardStream</Name>
      <From><Output>out</Output></From>
    </OutgoingUpstream>
    
  </Filter>
  
  <Backend>
    
    <Network>
      
      <Type>BackendNetwork</Type>
      <Version>1.0.0</Version>
      
      <SearchPath>${CMAKE_CURRENT_BINARY_DIR}</SearchPath>
      <Plugin>plugin-xml.so</Plugin>
      <Plugin>plugin-mrnet.so</Plugin>

      <Component>
        <Name>Doubler-1</Name>
        <Type>Doubler</Type>
      </Component>
      
      <Input>
        <Name>in</Name>
        <To>
          <Name>Doubler-1</Name>
          <Input>in</Input>
        </To>
      </Input>
      
      <Output>
        <Name>out</Name>
        <From>
          <Name>Doubler-1</Name>
          <Output>out</Output>
        </From>
      </Output>
      
    </Network>
    
    <IncomingDownstream>
      <Name>DownwardStream</Name>
      <To><Input>in</Input></To>
    </IncomingDownstream>
    
    <OutgoingUpstream>
      <Name>UpwardStream</Name>
      <From><Output>out</Output></From>
    </OutgoingUpstream>
    
  </Backend>
  
</MRNet>
